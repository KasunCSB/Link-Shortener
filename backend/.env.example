# Application
APP_NAME=Link Shortener
APP_VERSION=1.0.0
DEBUG=false
BASE_URL=https://lk.kasunc.uk

# CORS - comma-separated list of allowed origins (use * for all, not recommended in production)
CORS_ORIGINS=https://lk.kasunc.uk,https://www.lk.kasunc.uk

# Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=linkshortener
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=linkshortener

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Link Settings
DEFAULT_CODE_LENGTH=7
MIN_CUSTOM_CODE_LENGTH=3
MAX_CUSTOM_CODE_LENGTH=20
DEFAULT_EXPIRY_DAYS=30
MAX_EXPIRY_DAYS=365

# Rate Limiting
RATE_LIMIT_PER_HOUR=30
RATE_LIMIT_BURST=5

# Reserved codes (JSON array)
RESERVED_CODES=["api","admin","www","static","assets","health","robots.txt","favicon.ico","sitemap.xml"]

# Security - blocked domains (JSON array, optional)
BLOCKED_DOMAINS=[]

# Cloudflare Turnstile CAPTCHA (optional)
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=
TURNSTILE_ENABLED=false

# Cleanup settings
CLEANUP_INTERVAL_HOURS=1
DELETE_EXPIRED_LINKS=true

# Feature flags
ENABLE_PASSWORD_PROTECTION=true
ENABLE_ONE_TIME_LINKS=true
ENABLE_OPENGRAPH_PREVIEW=true
MAX_BULK_ITEMS=100

